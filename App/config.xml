<?xml version='1.0' encoding='utf-8'?>
<widget id="org.apache.cordova.smartewd" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Smart EWD</name>
    <description>
        Smart EWD.
    </description>
    <author email="fsv-mf@web.de" href="http://www.web.de">
       Heiko Eichhorn
    </author>
    <hook src="./prepareAngular4App.js" type="before_prepare" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="http://192.168.4.1/data" />
    <platform name="android">
        <allow-intent href="market:*" />
        <access origin="http://192.168.4.1/data" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    </platform>
    <platform name="windows">
        <preference name="windows-target-version" value="10.0" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
